{{>navigation}}

{{!-- landing page/header --}}
<header class="header">

    <div class="header__text-box">
        <h1 class="heading-primary">
            <!-- a span is to style some text differently -->
            <span class="heading-primary--main u-margin-bottom-small">build an online portfolio</span>
            <span class="heading-primary--sub">where your work can stand out</span>
        </h1>

        <a href="#" class="btn btn--white btn--animated-left">Login</a>
        &nbsp;
        <a href="#" class="btn btn--white btn--animated-right">Sign Up</a>
    </div>
</header>

{{!-- about section --}}
<section class="section-about" id="section-about">
    <div class="u-center-text">
        <h2 class="heading-secondary u-margin-bottom-big">
            GoHAMDev's Portfolio Builder
        </h2>
    </div>
    <div class="row">
        <div class="col-1-of-2">
            <p class="paragraph u-margin-top-medium">
                GoHAMDev was founded by two freelance developers in 2019 with an idea of building web applications to
                make
                the lives of others simplier. This website does just that and much more with user-friendly features. Get
                your online portfolio today!
            </p>
        </div>
        <div class="col-1-of-2">
            <div class="composition">
                <img src="./img/igor-miske-JVSgcV8_vb4-unsplash.jpg" alt="Photo 1"
                    class="composition__photo composition__photo--p1">
                <img src="./img/radek-grzybowski-eBRTYyjwpRY-unsplash.jpg" alt="Photo 2"
                    class="composition__photo composition__photo--p2">
                <img src="./img/igor-miske-Px3iBXV-4TU-unsplash.jpg" alt="Photo 3"
                    class="composition__photo composition__photo--p3">
            </div>
        </div>
    </div>
</section>

{{!-- steps section --}}
<section class="section-steps" id="section-steps">
    <div class="u-center-text u-margin-bottom-big">
        <h2 class="heading-secondary">
            Lets get started
        </h2>
    </div>
    <div class="row">
        <div class="col-1-of-3">
            <div class="steps-card">
                <i class="fas fa-sign-in-alt steps-card__icon u-margin-bottom-small" aria-hidden="true"></i>
                <h3 class="steps-card__heading u-margin-bottom-small u-margin-bottom-small">Step One</h3>
                <p class="steps-card__text">
                    Login or sign up with our portfolio builder for absoutely free!
                </p>
            </div>
        </div>
        <div class="col-1-of-3">
            <div class="steps-card">
                <i class="fas fa-tasks steps-card__icon u-margin-bottom-small" aria-hidden="true"></i>
                <h3 class="steps-card__heading u-margin-bottom-small">Step Two</h3>
                <p class="steps-card__text">
                    Fill out your information and include some of your favorite projects!
                </p>
            </div>
        </div>
        <div class="col-1-of-3">
            <div class="steps-card">
                <i class="fas fa-link steps-card__icon u-margin-bottom-small" aria-hidden="true"></i>
                <h3 class="steps-card__heading u-margin-bottom-small">Step Three</h3>
                <p class="steps-card__text">
                    Copy the link and share it with your collegues, recruiters, and others!
                </p>
            </div>
        </div>
    </div>
</section>

<section class="section-contact" id="section-contact">
    <div class="u-center-text">
        <h1 class="heading-tertiary u-margin-bottom-big">
            Connect with us and check out more of our collaborative work!
        </h1>
        <div class="connect">
            <i class="fas fa-envelope-square connect__icon" aria-hidden="true"></i>
            <i class="fab fa-linkedin connect__icon" aria-hidden="true"></i>
            <i class="fab fa-github-square connect__icon" aria-hidden="true"></i>
        </div>
    </div>
</section>

<footer class="footer">
    <div class="footer__copyright u-center-text">
        Copyright &copy; GoHAM 2019
    </div>
</footer>


