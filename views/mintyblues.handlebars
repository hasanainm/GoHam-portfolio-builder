<canvas id="canvas"></canvas>
<header class="header">
  <div class="header__text-area">
    <h1 class="heading-primary">
      <span class="heading-primary--main">Hi, everybody! My name is {{data.ProfileName.fname}} {{data.ProfileName.lname}}.</span>
      <span class="heading-primary--sub">I am a {{data.ProfileName.title}}!</span>
    </h1>
    <a href="#section-about" class="btn btn--white btn--animated">check me out</a>
  </div>
</header>

<section class="section-about" id="section-about">
  <div class="bio">
    <p class="bio--text">{{data.ProfileName.bio}}</p>
  </div>
</section>

<section class="skills-list">
  <div class="skills"></div>
  <div class="skills-content">
    <div class="skills-cards">
      <div class="row">
        <div class="col-1-of-4">
          <h2 class="skills-heading">Front-End <i class="fa fa-code" aria-hidden="true"></i></h2>
          {{#each data.dataValues.FrontEndSkills}}
          <ul>
            <li>{{dataValues.nameOfSkill}}</li>
          </ul>
          {{/each}}
        </div>
        <div class="col-1-of-4">
          <h2 class="skills-heading">Back-End <i class="fa fa-plug" aria-hidden="true"></i></h2>
          {{#each data.dataValues.BackEndSkills}}
          <ul>
            <li>{{dataValues.nameOfSkill}}</li>
          </ul>
          {{/each}}
        </div>
        <div class="col-1-of-4">
          <h2 class="skills-heading">Framework <i class="fa fa-paint-brush" aria-hidden="true"></i></h2>
          {{#each data.dataValues.Frameworks}}
          <ul>
            <li>{{dataValues.nameOfSkill}}</li>
          </ul>
          {{/each}}
        </div>
        <div class="col-1-of-4">
          <h2 class="skills-heading">Other <i class="fa fa-desktop" aria-hidden="true"></i></h2>
          {{#each data.dataValues.OtherSkills}}
          <ul>
            <li>{{dataValues.nameOfSkill}}</li>
          </ul>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section-project">
  <div class="u-center-text u-margin-top-medium">
    <h2 class="heading-secondary u-project-title-color">
      Projects
    </h2>
  </div>
  <div class="row u-margin-top-medium">
    <div class="col-1-of-3">
      <!-- creating 2 cards to display content on front and back -->
      <div class="card">
        <div class="card__side card__side--front">
          <h3 class="card-title">Project 1</h3>
          <img src="/template-themes/MintyBlues/img/andrew-neel-cckf4TsHAuw-unsplash.jpg" class="card-image"
            alt="project1">
        </div>
        <div class="card__side card__side--back">
          <a href="#" class="btn btn--white u-center-text u-margin-bottom-small">View App</a>
          <a href="#" class="btn btn--white u-center-text">Github</a>
        </div>
      </div>
    </div>
    <div class="col-1-of-3">
      <div class="card">
        <div class="card__side card__side--front">
          <h3 class="card-title">Project 2</h3>
          <img src="/template-themes/MintyBlues/img/jeff-sheldon-JWiMShWiF14-unsplash.jpg" class="card-image"
            alt="project2">
        </div>
        <div class="card__side card__side--back">
          <a href="#" class="btn btn--white u-center-text u-margin-bottom-small">View App</a>
          <a href="#" class="btn btn--white u-center-text">GitHub</a>
        </div>
      </div>
    </div>
    <div class="col-1-of-3">
      <div class="card">
        <div class="card__side card__side--front">
          <h3 class="card-title">Project 3</h3>
          <img src="/template-themes/MintyBlues/img/stanley-dai-73OZYNjVoNI-unsplash.jpg" class="card-image"
            alt="project3">
        </div>
        <div class="card__side card__side--back">
          <a href="#" class="btn btn--white u-center-text u-margin-bottom-small">ViewApp</a>
          <a href="#" class="btn btn--white u-center-text">GitHub</a>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section-contact">
  <div class="u-center-text">
    <h2 class="heading-secondary u-contact-color u-margin-bottom-big">
      Get in touch with me!
    </h2>
    <div class="connect">
      <a href={{data.dataValues.Link.dataValues.facebook}} target="_blank"><i class="fa fa-facebook-official connect__icon u-icon u-padding" aria-hidden="true"></i></a>

      <a href={{data.dataValues.Link.dataValues.instagram}} target="_blank"><i class="fa fa-instagram connect__icon u-icon u-padding" aria-hidden="true"></i></a>

      <a href={{data.dataValues.Link.dataValues.linkedin}} target="_blank"><i class="fa fa-linkedin connect__icon u-icon u-padding" aria-hidden="true"></i></a>

      <a href={{data.dataValues.Link.dataValues.twitter}} target="_blank"><i class="fa fa-twitter-square connect__icon u-icon u-padding" aria-hidden="true"></i></a>
    </div>

  </div>


  <footer>
    <div class="footer">
      <p class="footer__copyright u-center-text">
        Copyright &copy; GoHAM 2019
      </p>
    </div>
  </footer>
