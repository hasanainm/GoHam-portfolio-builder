{{>sideNav}}

<section class="section-name-title" id="data" data-id={{data.id}}>

    {{!-- {{#each data.dataValues.ProfileName}} --}}
    <div class="box1 u-center-text u-margin-top-big">
        <h3 class="heading-quad">
            What is your name?
            <div class="form__group u-center-text u-margin-top-small">
                <input type="text" class="form__input u-margin-bottom-small" placeholder="First Name" id="fname-value"
                    required>
                <input type="text" class="form__input" placeholder="Last Name" id="lname-value" required>
            </div>
        </h3>
    </div>

    <div class="box2 u-center-text u-margin-top-big">
        <h3 class="heading-quad">
            What is your profession/field of interest?
            <div class="form__group u-center-text u-margin-top-small">
                <input type="text" class="form__input" placeholder="Title" id="title-value" required>
            </div>
        </h3>
    </div>

    <div class="box3 u-center-text u-margin-top-big u-margin-bottom-small">
        <h3 class="heading-quad">
            What is your story?
            <div class="form__group u-center-text u-margin-top-small">
                <textarea type="textarea" maxlength="1000" class="form__input" placeholder="Bio" id="bio-value"
                    required></textarea>
            </div>
        </h3>
    </div>
    <button type="button" class="btn btn-light submit" id="submit">Light</button>


    <button type="button" class="btn btn-light submit" id="submit">Submit</button>

    
    {{!-- {{/each}} --}}

</section>

<script src="/js/crud-profileName.js"></script>